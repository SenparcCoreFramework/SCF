@model Senparc.Scf.AreaBase.Admin.IAdminPageModelBase
@{
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Title"]" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <!-- 引入样式 -->
    <link href="~/lib/element-ui_2.13.2/element.css" rel="stylesheet" />
    <link href="~/css/Admin/Shared/layout.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    @RenderSection("HeaderContent", false)
    @RenderSection("Style", false)
</head>
<body>
    <div id="app" v-cloak>
        <div class="app-wrapper">
            <el-container>
                <el-aside :style="{'width':navMenu.isCollapse?'64px':''}" class="el-aside-index">
                    <div :class="[navMenu.isCollapse?'':'head-log']">
                        <img src="~/images/Admin/base/head/logo_230x55.png" alt="Alternate Text" />
                    </div>
                    <el-scrollbar wrap-class="scrollbar-wrapper">
                        <el-menu :default-active="navMenu.activeMenu"
                                 :collapse="navMenu.isCollapse"
                                 :background-color="navMenu.variables.menuBg"
                                 :text-color="navMenu.variables.menuText"
                                 :unique-opened="false"
                                 :active-text-color="navMenu.variables.menuActiveText"
                                 :collapse-transition="false"
                                 @@select="menuSelect"
                                 mode="vertical">
                            <sidebar-item v-for="(items,index) in navMenu.navMenuList" :key="index" :item="items"></sidebar-item>
                        </el-menu>
                    </el-scrollbar>
                </el-aside>
                <el-container>
                    <el-header>
                        <div class="header-menu">
                            <el-button @@click="toggleSideBar" icon="el-icon-s-fold" circle></el-button>
                        </div>
                        <div class="header-breadcrumb">
                            <el-breadcrumb separator="/">
                                <el-breadcrumb-item><a href="/">首页</a></el-breadcrumb-item>
                                <el-breadcrumb-item><a href="/">活动管理</a></el-breadcrumb-item>
                                <el-breadcrumb-item>活动列表</el-breadcrumb-item>
                                <el-breadcrumb-item>活动详情</el-breadcrumb-item>
                            </el-breadcrumb>
                        </div>
                        <div class="header-logout">
                            <el-tooltip class="item" effect="dark" content="退出登录" placement="left">
                                <el-button icon="el-icon-circle-close" circle></el-button>
                            </el-tooltip>
                        </div>
                    </el-header>
                    <el-main>
                        <div id="app" class="ifram-wrapper">
                            @*<iframe :src="pageSrc"></iframe>*@
                            @RenderBody()
                        </div>
                    </el-main>
                </el-container>
            </el-container>
        </div>
    </div>
    <!--lib-->
    <script src="~/lib/vue/vue.js"></script>
    <script src="~/lib/element-ui_2.13.2/element.js"></script>
    <script src="~/lib/axios/axios.min.js"></script>
    <!--js-->
    <script src="~/js/Admin/axios.js"></script>
    <script src="~/js/Admin/global.js"></script>
    <!--菜单栏-->
    <script src="~/js/Admin/navMenu.js"></script>
    <script src="~/js/Admin/vuePermission.js"></script>
    <script src="~/js/Admin/Pages/Components/Components.js"></script>
    <!--页面js-->
    @*<script src="~/js/Admin/Pages/Index/Index.js"></script>*@
    @RenderSection("scripts", false)
    @Html.AntiForgeryToken()
</body>
</html>
