@model Senparc.Scf.AreaBase.Admin.IAdminPageModelBase
@{
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Title"]" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    @RenderSection("HeaderContent", false)
    @RenderSection("Style", false)
    <!-- jQuery -->
    <script src="~/node_modules/gentelella/vendors/jquery/dist/jquery.min.js"></script>
    <style>
        footer .footer-img {
            width: 24px;
            margin-right: 1rem;
        }

        footer ul {
            padding: 0;
        }

            footer ul li {
                list-style-type: none;
                padding: 4px 0;
                text-align: left;
            }

                footer ul li a:hover {
                    opacity: .7;
                    color: #6d17e1
                }

        footer .footer-title {
            font-size: 14px;
        }

        footer .footer-copyright {
            color: #999;
            padding-top: 15px;
        }

        footer #qq-code-img {
            position: absolute;
            width: 192px;
            height: 200px;
            top: -245px;
            left: 15px;
            display: none;
        }

        footer .footer-img:hover {
            opacity: .7
        }

        .page-title{margin-top:30px;}
    </style>
</head>
<body class="nav-md">
    @RenderSection("modal", false)
    <div class="container body">
        <div class="main_container">
            <div>
                <div class="page-title">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="clearfix"></div>
                @RenderBody()
            </div>

            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    &copy; @DateTime.Now.Year -  <a href="http://wwww.senparc.com">苏州盛派网络科技有限公司</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    @*本地*@
    <environment include="Development">
        <!-- jQuery -->
        @*<script src="~/node_modules/gentelella/vendors/jquery/dist/jquery.min.js"></script>*@
        <!-- Bootstrap -->
        <script src="~/node_modules/gentelella/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- FastClick -->
        <script src="~/node_modules/gentelella/vendors/fastclick/lib/fastclick.js"></script>
        <!-- NProgress -->
        <script src="~/node_modules/gentelella/vendors/nprogress/nprogress.js"></script>
        <!-- iCheck -->
        <script src="~/node_modules/gentelella/vendors/iCheck/icheck.min.js"></script>
        <!-- PNotify -->
        <script src="~/node_modules/gentelella/vendors/pnotify/dist/pnotify.js"></script>
        <script src="~/node_modules/gentelella/vendors/pnotify/dist/pnotify.buttons.js"></script>
        <!-- Sweetalert -->
        <script src="~/node_modules/sweetalert/dist/sweetalert.min.js"></script>

        <!-- validator -->
        <script src="~/node_modules/gentelella/vendors/validator/validator.js"></script>
        <!-- Custom Theme Scripts -->
        @*<script src="~/js/gentelella-custom/custom.js"></script>*@
        <script src="~/js/Admin/base.js"></script>
        <script src="~/js/Admin/global.js"></script>
    </environment>

    <script src="~/node_modules/moment/min/moment.min.js"></script>

    <script src="~/node_modules/bootstrap-datetimepicker/src/js/bootstrap-datetimepicker.js"></script>
    <script>
        $(function () {
            //访问量统计
            //var _hmt = _hmt || [];
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?cff4d7b0f55e45ceab91d2197cb95cdc";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        });
    </script>
    @RenderSection("scripts", false)
    @Html.RenderMessageBox()
    <input type="text" style="opacity:0" value="" id="clipboardContainer" />
    <form asp-page="Index" style="display:none"></form>
</body>

</html>
