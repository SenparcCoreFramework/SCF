@page
@model Senparc.Areas.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "管理员后台首页";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/lib/element-ui_2.13.2/element.css" rel="stylesheet" />
    <link href="~/css/Admin/new/index.css" rel="stylesheet" />
    <link href="~/css/Admin/new/sidebar.css" rel="stylesheet" />
    <title>管理员后台</title>
</head>
<body>
    <div id="app">
        <div class="app-wrapper">
            <!--菜单栏-->
            <div class="sidebar-container">
                @*<a href="index.html" class="sidebar-logo">
                    <img src="http://www.wjhszh.gov.cn/images/Admin/base/head/logo_230x55.png">
                </a>*@
                <el-scrollbar wrap-class="scrollbar-wrapper">
                    <el-menu :default-active="activeMenu"
                             :collapse="isCollapse"
                             :background-color="variables.menuBg"
                             :text-color="variables.menuText"
                             :unique-opened="false"
                             :active-text-color="variables.menuActiveText"
                             :collapse-transition="false"
                             mode="vertical">
                        <sidebar-item v-for="(items,index) in navMenuList" :key="index" :item="items"></sidebar-item>
                    </el-menu>
                </el-scrollbar>
            </div>
            <div class="main-container">
                <div class="navbar" @@click="isCollapse=false">导航</div>
                <div class="app-main"@@click="isCollapse=true">内容区域</div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/lib/vue/vue.js"></script>
<script src="~/lib/element-ui_2.13.2/element.js"></script>
<script src="~/lib/axios/axios.min.js"></script>
<script src="~/js/Admin/axios.js"></script>
<script src="~/js/Admin/Pages/Components/Components.js"></script>
<script src="~/js/Admin/Pages/Index/Index.js"></script>
