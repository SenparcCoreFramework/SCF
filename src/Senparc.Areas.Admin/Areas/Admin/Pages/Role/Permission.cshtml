@page
@model Senparc.Areas.Admin.Areas.Admin.PagesRolePermissionModel
@{
    //ViewData["Title"] = $"{Model.SysRoleInfo.RoleName}角色权限列表";
    Layout = "_Layout_old";
}

@section Style{
    <link href="~/node_modules/@@ztree/ztree_v3/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" />
}


@section breadcrumbs{
    <li>系统管理</li>
    <li>
        <a asp-Page="/Role/Index" asp-area="Admin">角色管理</a>
    </li>
    <li>
        角色权限管理
    </li>
}
<!-- START row-->

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <h3>
                    @Model.SysRoleInfo.RoleName - 权限设置
                </h3>
                <div class="treeContainer">
                    <ul id="tree" class="ztree"></ul>
                </div>
                <a asp-page="Index" class="btn btn-default">返回</a>
                <a class="btn btn-primary" id="save">保存</a>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/node_modules/@@ztree/ztree_v3/js/jquery.ztree.core.min.js"></script>
    <script src="~/node_modules/@@ztree/ztree_v3/js/jquery.ztree.excheck.min.js"></script>
    <script src="~/js/Admin/Pages/Role/Permission.js"></script>
}