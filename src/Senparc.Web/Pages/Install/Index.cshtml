@page
@model Senparc.Web.Pages.Install.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SCF 安装</title>
    <style>

        body, a {
            color: #535353;
        }

        h2 {
            text-align: center;
            color: #09c821;
            margin: 30px 0px;
        }

        a {
            text-decoration-line: underline;
        }

        .wrapper {
            width: 50%;
            margin: 50px auto;
        }

        #footer {
            text-align: center;
            position: absolute;
            display: inline-block;
            width: 50%;
            top: 60%;
            /*margin: 240px 0px 50px 0px;*/
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <h2>SenparcCoreFramework<br />初始化安装成功！</h2>
        <div>
            <p>请保存好以下信息：</p>
            <p>管理员账号：<strong>@Model.AdminUserName</strong></p>
            <p>管理员密码：<strong>@Model.AdminPassword</strong></p>
            <p>注意：本页面已经失效，请保存好管理员账号及密码，密码无法找回明文！</p>
            <p class="center">&gt; <a asp-page="/Index" asp-area="Admin">点击这里登录</a> &lt;</p>
        </div>
        <div id="footer">
            苏州盛派网络科技有限公司 版权所有
        </div>
    </div>
</body>
</html>

